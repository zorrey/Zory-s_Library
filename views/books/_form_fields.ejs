
<div class="form-row">
    <div class="form-item">
        <label for="title"> Title </label>
        <input type="text" name="title" value="<%= book.title %>">
    </div>
    <div class="form-item">
        <label for="authorNewbook"> Author </label>
        <select name="author" id="authorNewbook" >
            <% authors.forEach(author => { %>
                <% if( author.id == book.author ) { %>
                <option selected label="<%= author.name  %>" value="<%= author.id %>"></option>
                <% } else { %>
                <option label="<%= author.name %>" value="<%= author.id %>"></option>
                <% } %>
                <% }) %>             
        </select>   
    </div>
</div>
<div class="form-row" >
    <div class="form-item">
        <label for="publishDate"> Date Published </label>
        <input type="date" name="publishDate" 
            value="<%= !book.publishDate ? "": book.publishDate.toISOString().split('T')[0] %>">
    </div>
    <div class="form-item">
        <label for="pageCount"> Page Count</label>
        <input type="number" name="pageCount" min="1" value="<%= book.pageCount %>"> 
    </div>  
</div>
<div class="form-row">
    <div class="no-grow">
        <label for="cover"> Cover </label> <br>
        <div class="form-row">
            <div class="book-card">
                <% if(book.coverImage != null && book.coverImage != undefined ) { %>
                <img class="book-cover" src="<%= book.coverPath %>" alt="book cover">
                <span class="book-title"> <%= book.title %> </span>   
                <span class="book-title preview">Preview</span> <br>
                <% } %>
            </div>    
            
         <input type="file" name="cover"  class="book-cover filepond">     
        </div>      
    </div>
    <div class="form-item">
        <label for="description"> Description </label>
        <textarea type="text" name="description" > <%= book.description %> </textarea>
    </div>
</div>

